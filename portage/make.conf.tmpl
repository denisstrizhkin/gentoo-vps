COMMON_FLAGS="-O3 -pipe"

CFLAGS="${COMMON_FLAGS} -flto"
CXXFLAGS="${CFLAGS}"

FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"

LC_MESSAGES=C.utf8

ACCEPT_LICENSE="-* @FREE"

# No multilib
MULTILIB_ABIS="amd64"
USE_EXPAND_HIDDEN="ABI_X86"

{{- if eq .type "binhost" }}

MAKEOPTS="-j8"

FEATURES="buildpkg"

BINPKG_COMPRESS="zstd"
BINPKG_FORMAT="gpkg"

{{ else if eq .type "vps"}}

EMERGE_DEFAULT_OPTS="--getbinpkg"

{{ end -}}
